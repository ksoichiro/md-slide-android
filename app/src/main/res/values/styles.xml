<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="Presentation" />

    <style name="Presentation.Screen">
        <item name="android:background">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Presentation.Text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontName">@string/font_name_default</item>
    </style>
    <style name="Presentation.Text.H1">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>
    <style name="Presentation.Text.H2">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="Presentation.Text.LI">
        <item name="android:layout_marginLeft">@dimen/margin_left_li</item>
    </style>
    <style name="Presentation.Text.LI.Burette">
        <item name="android:textSize">@dimen/text_size_li_burette</item>
    </style>
    <style name="Presentation.Text.LI.Text">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">@dimen/text_size_li</item>
    </style>

    <style name="Presentation.Text.LI2">
        <item name="android:layout_marginLeft">@dimen/margin_left_li2</item>
    </style>
    <style name="Presentation.Text.LI2.Burette">
        <item name="android:textSize">@dimen/text_size_li2_burette</item>
    </style>
    <style name="Presentation.Text.LI2.Text">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">@dimen/text_size_li2</item>
    </style>

    <style name="Presentation.Text.LI3">
        <item name="android:layout_marginLeft">@dimen/margin_left_li3</item>
    </style>
    <style name="Presentation.Text.LI3.Burette">
        <item name="android:textSize">@dimen/text_size_li3_burette</item>
    </style>
    <style name="Presentation.Text.LI3.Text">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">@dimen/text_size_li3</item>
    </style>

    <style name="Presentation.Text.P">
        <item name="android:textSize">@dimen/text_size_p</item>
    </style>

</resources>
